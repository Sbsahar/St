    img_height = sum(line_heights) + 15 * len(lines)  # Ø²ÙŠØ§Ø¯Ø© Ø§Ù„Ù…Ø³Ø§ÙØ© Ø¨ÙŠÙ† Ø§Ù„Ø³Ø·ÙˆØ±
    
    # Ø±Ø³Ù… Ø§Ù„Ù†Øµ Ù…Ø¹ Ø¸Ù„ Ø°Ù‡Ø¨ÙŠ Ø®ÙÙŠÙ Ø¬Ø¯Ù‹Ø§
    img = Image.new("RGBA", (img_width, img_height), (0, 0, 0, 0))  # Ø®Ù„ÙÙŠØ© Ø´ÙØ§ÙØ©
    draw = ImageDraw.Draw(img)
    current_h = 0

    for line, h in zip(lines, line_heights):
        line_segments = re.split(r'([A-Za-z0-9\s]+)', line)
        line_segments = [seg for seg in line_segments if seg.strip()]
        line_segments.reverse()  # Ø¹ÙƒØ³ ØªØ±ØªÙŠØ¨ Ø§Ù„Ø£Ø¬Ø²Ø§Ø¡ ÙÙŠ Ø§Ù„Ø³Ø·Ø±
