    draw = ImageDraw.Draw(dummy_img)
    line_heights = []
    line_widths = []
    for line in lines:
        total_width = 0
        total_height = 0
        line_segments = re.split(r'([A-Za-z0-9\s]+)', line)
        for seg in line_segments:
            if seg.strip():
                font = latin_font if re.match(r'[A-Za-z0-9\s]+', seg) else arabic_font
                bbox = draw.textbbox((0, 0), seg, font=font)
                total_width += bbox[2] - bbox[0] + 5  # Ø¥Ø¶Ø§ÙØ© Ù…Ø³Ø§ÙØ© 5 Ø¨ÙƒØ³Ù„ Ø¨ÙŠÙ† Ø§Ù„Ø£Ø¬Ø²Ø§Ø¡
                total_height = max(total_height, bbox[3] - bbox[1] + 5)  # Ø²ÙŠØ§Ø¯Ø© Ø§Ù„Ø§Ø±ØªÙØ§Ø¹ Ù„Ù„Ù†ØµÙˆØµ Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©
